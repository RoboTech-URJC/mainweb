// Reglas Firestore básicas (modo producción mejorar/restringir más)
// Guarda este fichero como firestore.rules y usa en Firebase Console → Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Colección 'status' con documento 'current'
    match /status/{docId} {
      allow read: if true; // cualquiera puede leer (puedes cambiar a auth != null)
      allow write: if request.auth != null
                    && request.resource.data.keys().hasOnly(["people_count","status","last_updated"])
                    && request.resource.data.people_count is int
                    && request.resource.data.people_count >= 0
                    && request.resource.data.status is string;
    }

    // Ejemplo: checkins (si decides crear registros por usuario en el futuro)
    match /checkins/{checkinId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // por ahora no permitir modificaciones
    }

    // Por defecto negar todo lo demás
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
